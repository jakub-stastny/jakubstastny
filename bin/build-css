#!/usr/bin/env bb

(defn target-path [source-path]
  (str "pages/css/" (fs/file-name source-path)))

(defn process-args [args]
  (doseq [path args]
    (fs/copy path (target-path path) {:replace-existing true})))

(defn process-default []
  (process-args (map str (fs/glob "src/components" "**/*.css"))))

(if (seq *command-line-args*)
  (process-args *command-line-args*)
  (process-default))
