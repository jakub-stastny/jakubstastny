#!/usr/bin/env bb

(require '[babashka.process :as process]
         '[babashka.fs :as fs]
         '[babashka.pods :as pods])

(pods/load-pod 'org.babashka/fswatcher "0.0.5")
(require '[pod.babashka.fswatcher :as fw])

;; Compile everything at start.
(process/shell (str "npx cherry compile " (str/join " " (fs/glob "pages" "**/*.cljs"))))

(defn cljs-file? [path]
  (and (fs/exists? path)
       (fs/regular-file? path)
       (.endsWith path ".cljs")))

(defn handler [event]
  (prn event)
  (let [{:keys [path]} event]
    (when (cljs-file? path)
      (try
        ;; TODO: Don't print the whole error, rather just time stamp and OK/Err.
        (process/shell (str "npx cherry compile " path))
        (catch Exception (prn error))))))

(def watcher (fw/watch "pages" handler {:recursive true}))

println "~ Watching for changes in CLJS files."

@(promise)
